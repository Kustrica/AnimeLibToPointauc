{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.0.0",
  "author": "Kustrica (Telegram: @Kustrica)",
  "description": "__MSG_extensionDescription__",
  "default_locale": "ru",
  "permissions": ["clipboardWrite"],
  "homepage_url": "https://t.me/Kustrica",
  "browser_specific_settings": {
    "gecko": {
      "id": "animelibtopointauc@kustrica.addon",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.anilib.me/*",
        "*://*.anilib.org/*",
        "*://*.anilib.ru/*",
        "*://*.animelib.me/*",
        "*://*.animelib.org/*",
        "*://*.animelib.ru/*",
        
        "*://*.mangalib.me/*",
        "*://*.mangalib.org/*",
        "*://*.mangalib.ru/*",
        "*://*.mangalib.one/*",
        "*://*.mangalib.com/*",
        "*://*.mangalib.net/*",

        "*://*.hentailib.me/*",
        "*://*.hentailib.org/*",
        "*://*.hentailib.ru/*",
        "*://*.hentailib.one/*",
        "*://*.hentailib.com/*",
        "*://*.hentailib.net/*",

        "*://*.slashlib.me/*",
        "*://*.slashlib.org/*",
        "*://*.slashlib.ru/*",
        "*://*.slashlib.one/*",
        "*://*.slashlib.com/*",
        "*://*.slashlib.net/*",

        "*://*.ranobelib.me/*",
        "*://*.ranobelib.org/*",
        "*://*.ranobelib.ru/*",
        "*://*.ranobelib.one/*",
        "*://*.ranobelib.com/*",
        "*://*.ranobelib.net/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon/hammer-240.png", "icon/wheel-256.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
